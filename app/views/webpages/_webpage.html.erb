<% if webpage.persisted? %>
    <div class="col-md-6 col-lg-4 mb-5">
        <div class="d-flex mb-4 pb-3 border-bottom">
            <h5 class="text-secondary text-truncate mb-0"><%= webpage.title %></h5>
            <div class="d-flex align-items-center ms-3">
                <%= link_to edit_website_webpage_path(@website, webpage), class: "text-secondary", title: "Edit webpage", data: { controller: "tooltip", tooltip_target: "element", bs_toggle: "tooltip", bs_placement: "top" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                    </svg>
                <% end %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="ms-2 text-secondary bi bi-calendar-check" viewBox="0 0 16 16" data-controller="tooltip" data-tooltip-target="element" data-bs-toggle="tooltip" data-bs-placement="top" title="Next Archive: <%= webpage.next_scheduled_screenshot_capture.strftime("%B %e, %Y") %>">
                    <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                </svg>
            </div>                   
        </div>
        <%= link_to website_webpage_path(@website, webpage), class: "d-block mb-3" do %>
            <% if webpage.latest_screenshot.present? && webpage.latest_screenshot.image.attached? %>
                <%= image_tag webpage.latest_screenshot.image.variant(resize_to_fill: [480, 480, { gravity: 'North' }]), class: "img-fluid rounded shadow-sm border" %>
            <% else %>    
                <div class="ratio ratio-1x1 bg-dark rounded">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="spinner-border text-light" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
        <%= link_to webpage.url, target: "_blank", class: "d-flex align-items-center text-secondary " do  %>
            <span class="me-2"><%= webpage.url %></span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
                <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
            </svg>
        <% end %> 
    </div>
<% end %>