<% if webpage.persisted? %>
    <div class="col-md-6 col-lg-4 mb-5">
        <div class="card shadow-sm border-0">
            <% if webpage.latest_screenshot.present? && webpage.latest_screenshot.image.attached? %>
                <%= image_tag webpage.latest_screenshot.image.variant(resize_to_fill: [480, 480, { gravity: 'North' }]), class: "card-img-top" %>
            <% else %>
                <div class="embed-responsive embed-responsive-1by1 bg-dark d-flex align-items-center justify-content-center">
                    <div class="spinner-border text-light" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            <% end %>
            <div class="card-body">
                <h5 class="card-title font-weight-normal text-truncate"><%= webpage.title %></h5>
                <p class="card-text">
                    <%= link_to webpage.url, target: "_blank", class: "d-flex align-items-center" do  %>
                        <span class="mr-2"><%= webpage.url %></span>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
                            <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                            <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                        </svg>
                    <% end %>
                </p>
                <%= link_to "View", website_webpage_path(@website, webpage), class: "btn btn-sm btn-dark" %>
                <%= link_to "Edit", edit_website_webpage_path(@website, webpage), class: "btn btn-sm btn-link-dark" %>
            </div>
        </div>
    </div>
<% end %>