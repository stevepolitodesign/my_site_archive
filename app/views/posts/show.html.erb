<% content_for :page_title do %>
    <%= @post.title %>
<% end %>
<% content_for :sub_head do %>
    <div class="d-flex flex-column align-items-center mt-n3 mb-5">
        <%= render "byline" %>
    </div>
<% end %>
<%= image_tag @post.featured_image.variant(resize_to_fill: [1200, 400, { gravity: 'North' }]) if @post.featured_image.attached? %>
<% if policy(@post).edit? %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <hr/>
<% end %>
<article>
    <%= @post.content %>
</article>
<%= render "shared/cta" unless current_user %>