<% content_for :page_title do %>
    <%= @post.title %>
<% end %>
<% content_for :sub_head do %>
    <%= image_tag @post.featured_image.variant(resize_to_fill: [1200, 400, { gravity: 'North' }]), class: "img-fluid w-100 mb-5 rounded shadow" if @post.featured_image.attached? %>
    <%= render "byline" %>
<% end %>
<% if policy(@post).edit? %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <hr/>
<% end %>
<article>
    <%= @post.content %>
</article>
<% content_for :column_two do %>
    <div class="position-sticky top-0">
        <%= render "shared/cta" %>
    </div>
<% end unless current_user %>
