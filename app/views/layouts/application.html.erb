<!DOCTYPE html>
<html>
  <%= render partial: "shared/head" %>
  <body class="bg-gray-600">
    <%= render "shared/flash" %>
    <%= render partial: "shared/nav" %>
    <section class="bg-gray-200 overflow-auto">
      <div class="container">
        <%= render partial: "shared/free_trial_expiration" if current_user && (current_user.on_generic_trial? && !current_user.subscribed?) %>
      </div>
    </section>
    <main class="py-5 bg-gray-100">
      <div class="container">
      <div class="row mb-3">
        <div class="col">
          <%= render partial: "shared/page_title" %>
          <%= render partial: "shared/sub_head" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <% if content_for?(:column_one) %>
            <%= yield :column_one %>
          <% else %>
            <%= yield %>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= yield :column_two %>
        </div>
      </div>
    </main>
    <footer class="py-5">
      <div class="container">
        <%= render partial: "shared/footer" %>
      </div>
    </footer>
  </body>
</html>
