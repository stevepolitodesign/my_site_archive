<div class="bg-white shadow-sm position-relative">
  <div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3">
      <%= link_to root_path, class: "d-flex align-items-center mb-2 mb-lg-0 text-primary text-decoration-none" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-archive-fill me-2" viewBox="0 0 16 16">
          <path d="M12.643 15C13.979 15 15 13.845 15 12.5V5H1v7.5C1 13.845 2.021 15 3.357 15h9.286zM5.5 7h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1zM.8 1a.8.8 0 0 0-.8.8V3a.8.8 0 0 0 .8.8h14.4A.8.8 0 0 0 16 3V1.8a.8.8 0 0 0-.8-.8H.8z"/>
        </svg>
      <% end %>
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <% unless current_user %>
          <li><%= link_to "Pricing", pricing_path, class: "nav-link px-2 link-secondary" %></li>
          <li><%= link_to "FAQs", faqs_path, class: "nav-link px-2 link-secondary" %></li>
          <li><%= link_to "Resources", posts_path, class: "nav-link px-2 link-secondary" %></li>
        <% else %>
        <% if current_user.on_generic_trial? || current_user.subscribed? %>
          <li><%= link_to "My Sites", websites_path, class: "nav-link px-2 link-secondary" %></li>
        <% end %>
        <li><%= link_to "My Account", edit_user_registration_path, class: "nav-link px-2 link-secondary" %></li>
        <li><%= link_to "Billing", subscription_path, class: "nav-link px-2 link-secondary" %></li>        
        <% end %>
      </ul>
      <div class="col-md-3 text-end">
        <% unless current_user %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-link text-decoration-none me-2" %>
          <%= link_to "Sign-up", new_user_registration_path, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
        <% end %>
      </div>
    </header>
  </div>
</div>

