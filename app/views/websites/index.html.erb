<% content_for :page_title do %>
    My Websites
<% end %>
<% if policy(Website).new? %>
    <% content_for :page_title_button do %>
        <%= link_to new_website_path, class: "text-secondary", title: "Add a new website to monitor", data: { bs_toggle: "tooltip", bs_placement: "right" } do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
        <% end %>
    <% end %>
<% end %>
<% if @websites.present? %>
    <div class="card-deck mx-auto justify-content-center">
        <%= render @websites %>
    </div>
<% end %>