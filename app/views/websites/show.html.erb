<% content_for :page_title do %>
    <% @website.title %>
<% end %>
<%= link_to @website.url, @website.url, target: "_blank" %>
<%= render partial: "webpages/form" %>
<% if @website.latest_zone_file.present? %>
    <div class="card">
      <div class="card-header"><h2>DNS Records</h2></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th scope="col">Record Type</th>
                            <th scope="col">Content</th>
                            <th scope="col">Priority</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @website.latest_zone_file.dns_records.each do |dns_record| %>
                            <tr>
                                <td><%= dns_record.record_type %></td>
                                <td><%= dns_record.content %></td>
                                <td><%= dns_record.priority %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<% else %>
    <p>Retrieving DNS Records. Check back later.</p>
<% end %>