<% content_for :breadcrumb do %>
    <li class="breadcrumb-item"><%= link_to "My Websites", websites_path %></li>
    <li class="breadcrumb-item active text-truncate" aria-current="page"><%= truncate @website.title %></li>
<% end %>
<% content_for :page_title do %>
    <% @website.title %>
<% end %>
<%= link_to @website.url, @website.url, target: "_blank" %>
<%= render partial: "webpages/form" %>
<% if @website.latest_zone_file.present? %>
    <h2>DNS Records</h2>
    <table>
        <thead>
            <tr>
                <th>Record Type</th>
                <th>Content</th>
                <th>Priority</th>
            </tr>
        </thead>
        <tbody>
            <% @website.latest_zone_file.dns_records.each do |dns_record| %>
                <tr>
                    <td><%= dns_record.record_type %></td>
                    <td><%= dns_record.content %></td>
                    <td><%= dns_record.priority %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <p>Retrieving DNS Records. Check back later.</p>
<% end %>