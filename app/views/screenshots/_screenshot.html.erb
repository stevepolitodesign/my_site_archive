<div class="col-md-6 col-lg-4 mb-5">
    <div class="mb-4 pb-3 border-bottom d-flex justify-content-between">
        <h5 class="text-secondary text-truncate mb-0"><%= screenshot.created_at.strftime("%m/%d/%y") %></h5>
        <div class="">
            <%= link_to url_for(screenshot.image), target: "_blank", class: "text-secondary text-decoration-none", title: "View full size", data: { bs_toggle: "tooltip", bs_placement: "top"  } do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-zoom-in" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
                    <path d="M10.344 11.742c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1 6.538 6.538 0 0 1-1.398 1.4z"/>
                    <path fill-rule="evenodd" d="M6.5 3a.5.5 0 0 1 .5.5V6h2.5a.5.5 0 0 1 0 1H7v2.5a.5.5 0 0 1-1 0V7H3.5a.5.5 0 0 1 0-1H6V3.5a.5.5 0 0 1 .5-.5z"/>
                </svg>            
            <% end if screenshot.image.attached?%>
            <%= link_to website_html_document_path(@website, screenshot.html_document), target: "_blank", class: "text-secondary text-decoration-none", title: "View source code", data: { bs_toggle: "tooltip", bs_placement: "top"  }  do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-code-slash" viewBox="0 0 16 16">
                    <path d="M10.478 1.647a.5.5 0 1 0-.956-.294l-4 13a.5.5 0 0 0 .956.294l4-13zM4.854 4.146a.5.5 0 0 1 0 .708L1.707 8l3.147 3.146a.5.5 0 0 1-.708.708l-3.5-3.5a.5.5 0 0 1 0-.708l3.5-3.5a.5.5 0 0 1 .708 0zm6.292 0a.5.5 0 0 0 0 .708L14.293 8l-3.147 3.146a.5.5 0 0 0 .708.708l3.5-3.5a.5.5 0 0 0 0-.708l-3.5-3.5a.5.5 0 0 0-.708 0z"/>
                </svg>
            <% end if screenshot.html_document.present?%>
        </div>
    </div>    
    <% if screenshot.image.attached? %>
        <%= image_tag screenshot.image.variant(resize_to_fill: [480, 480, { gravity: 'North' }]), class: "img-fluid rounded shadow-sm border mb-3" %>
    <% else %>
        <div class="ratio ratio-1x1 bg-dark rounded mb-3">
            <div class="d-flex align-items-center justify-content-center">
                <div class="spinner-border text-light" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    <% end %>
    <%= link_to screenshot.webpage.url, target: "_blank", class: "d-flex align-items-center text-secondary" do  %>
        <span class="mr-2"><%= screenshot.webpage.url %></span>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
            <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
            <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
        </svg>
    <% end %>
    <% if screenshot.stat.present? %>
        <ul>
            <% Stat::SCORES.each do |score| %>
            <li><span class="<%= performance_badge( (screenshot.stat.send("#{score}")*100).round(0) ) %>"><%= (screenshot.stat.send("#{score}")*100).round(0) %></span><%= score %></li>
            <% end %>
        </ul> 
    <% end %>
</div>