<% content_for :page_title do %>
    Previous DNS Records
<% end %>
<% @website.zone_files.includes([:dns_records]).each do |zone_file| %>
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center">
            <h2 class="h3">DNS Records on <%= zone_file.created_at.strftime("%m/%d/%y") %></h2>
            <%= link_to @website.url, target: "_blank", class: "d-flex align-items-center ml-3" do  %>
                <span class="mr-2"><%= @website.url %></span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                </svg>
            <% end %>            
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th scope="col">Record Type</th>
                            <th scope="col">Content</th>
                            <th scope="col">Priority</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render partial: "dns_records/dns_record", collection: zone_file.dns_records, as: "dns_record" %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<% end %>
<div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
</div>